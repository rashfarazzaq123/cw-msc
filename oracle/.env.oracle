# =============================================================================
# Oracle Database Environment Configuration
# For Dev/Test Environment - DO NOT USE IN PRODUCTION AS-IS
# =============================================================================

# Oracle Database Passwords
# IMPORTANT: Change these passwords before deployment!
ORACLE_PWD=OraclePassword123
ORDS_PWD=OrdsPassword123

# Oracle Database Configuration
ORACLE_SID=XE
ORACLE_PDB=XEPDB1
ORACLE_CHARACTERSET=AL32UTF8
ENABLE_ARCHIVELOG=false

# Network Configuration
ORACLE_LISTENER_PORT=1521
ORACLE_EM_PORT=5500
ORDS_HTTP_PORT=8080
ORDS_HTTPS_PORT=8443
ADMINER_PORT=8081

# Resource Limits (adjust based on GCP VM size)
ORACLE_MEMORY_LIMIT=4G
ORACLE_MEMORY_RESERVATION=2G
ORACLE_CPU_LIMIT=2.0
ORACLE_CPU_RESERVATION=1.0
ORACLE_SHM_SIZE=1g

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=./backups

# Timezone
TZ=UTC

# =============================================================================
# Security Notes:
# 1. Never commit this file with real passwords to version control
# 2. Add .env.oracle to .gitignore
# 3. Use strong passwords in production
# 4. Consider using GCP Secret Manager for production deployments
# =============================================================================
